<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".activities.MainActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            app:contentScrim="@color/primary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                android:src="@drawable/resturant_2"
                app:layout_collapseMode="parallax" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_welcome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_xlarge"
                    android:layout_marginTop="130dp"
                    android:text="Good Afternoon, Anish"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="@dimen/text_regular_3x" />

                <TextView
                    android:id="@+id/tv_lunch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv_welcome"
                    android:layout_below="@+id/tv_welcome"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:text="It's time for lunch"
                    android:textColor="@color/primaryTextColor" />
            </RelativeLayout>


            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin" />

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/secondaryLightColor"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_xxlarge"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/margin_xlarge"
                android:layout_weight="1"
                android:src="@drawable/icons8_noodles_100" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/margin_xlarge"
                android:layout_weight="1"
                android:src="@drawable/icons8_taco_100" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/margin_xlarge"
                android:layout_weight="1"
                android:src="@drawable/icons8_hamburger_100" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/margin_xlarge"
                android:layout_weight="1"
                android:src="@drawable/icons8_doughnut_100" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium">

            <TextView
                style="@style/food_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="CHINESE" />

            <TextView
                style="@style/food_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TACOS" />

            <TextView
                style="@style/food_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="BURGER" />

            <TextView
                style="@style/food_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="DONUT" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/text_regular_2x"
            android:layout_marginVertical="@dimen/margin_medium"
            android:text="OFFERS"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/text_regular_3x"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_restaurants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

    <android.support.v7.widget.SearchView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@color/secondaryLightColor"
        android:elevation="@dimen/margin_medium"
        app:layout_anchor="@id/appbar"
        app:layout_anchorGravity="center_horizontal|bottom" />


</android.support.design.widget.CoordinatorLayout>